{
	"manifest_version": 2,
	"name": "Remind you everything",
	"version": "1.0",
	"content_scripts": [
		{
			"matches": [
			"https://www.youtube.com/*"
		  ],
			"js": ["content.js"]
		}
		
	],
	"permissions": ["tabs", "activeTab", "storage"],

	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "Remind you everything"
	}
}